@import "fonts.css"
@import "base.css"
@import "layout.css"
@import "skeleton.css"
@import "prism.css"

body
  font-family: "Lato", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif

h1, h2, h3, h4, h5, h6
  font-family: "Abel", "Georgia", "Times New Roman", serif

a, a:visited
  text-decoration: none
  color: #9C0034

p
  font-size: 16px

.sidebar
  padding-top: 25px

.content
  padding-top: 25px

  pre
    width: 95%
    padding: 2%
    background: #eee
    border: 1px solid #9ee9ec
    overflow-x: scroll
    font-family: monaco, courier, monospace
    font-size: 13px
    margin: 1em 0
